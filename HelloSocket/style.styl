
*
  margin: 0
  padding: 0
  box-sizing: border-box

body
  font: 13px Helvetica, Arial

form
  background: white
  padding: 30px
  position: fixed
  bottom: 0
  width: 100%
form button
  width: 9%
  background: rgb(130, 23, 255)
  border: none
  padding: 10px

#messages
  list-style-type: none
  margin: 0
  padding: 0

#messages li
  padding: 5px 10px

#messages li:nth-child(odd)
  background: #eee



